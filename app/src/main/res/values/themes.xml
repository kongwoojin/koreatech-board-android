<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KoreatechBoard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/koreatech_main_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorDrawerItem">@color/koreatech_sub_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/koreatech_main_1</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KoreatechBoard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KoreatechBoard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KoreatechBoard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Article.Title" parent="Theme.KoreatechBoard">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Article.Text" parent="Theme.KoreatechBoard">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>