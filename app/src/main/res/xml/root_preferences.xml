<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/app_settings_header">

        <ListPreference
            app:defaultValue="school"
            app:entries="@array/board_entries"
            app:entryValues="@array/board_values"
            app:key="default_board"
            app:title="@string/default_board_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/info_settings_header">

        <Preference
            app:key="license"
            app:title="@string/license_title" />

        <Preference
            app:key="source_code"
            app:title="@string/source_code_title" />

    </PreferenceCategory>

</PreferenceScreen>